<Pane xmlns:fx="http://javafx.com/fxml"
           styleClass="container"
>
    <stylesheets>
        <URL value="@../../css/wordPopUp.css"/>
    </stylesheets>
    <VBox styleClass="popUp" spacing="30">
    <VBox spacing="10">
        <HBox alignment="TOP_RIGHT" translateY="4" translateX="-4">
            <ImageView>
                <image>
                    <Image url="@../../assets/close.png"/>
                </image>
            </ImageView>
        </HBox>
        <HBox>
            <Rectangle fill="D58CDB" height="2" width="300"/>
        </HBox>
    </VBox>
    <VBox spacing="10" styleClass="wordContain">
        <HBox spacing="20" >
            <VBox alignment="CENTER">
                <Label fx:id="Word" styleClass="Word" text="WORD" />
            </VBox>
            <VBox alignment="CENTER">
                <Label fx:id="Type" styleClass="Type" text="TYPE" />
            </VBox>
        </HBox>
        <VBox spacing="20" styleClass="definitionContain">
            <HBox spacing="15">
                <VBox>
                    <ImageView>
                        <image>
                            <Image url="@../../assets/audio.png" />
                        </image>
                    </ImageView>
                </VBox>
                <VBox>
                    <Label fx:id="Pronunciation" styleClass="Pronunciation" text="Pronunciation" />
                </VBox>
            </HBox>
            <VBox>
                <Label fx:id="Definition" styleClass="Definition" text="Definition"/>
            </VBox>
            <VBox>
                <Label fx:id="Example" styleClass="Example" text="EXAMPLE" />
            </VBox>
            <HBox alignment="CENTER">
                <Button fx:id="detailBtn" styleClass="detailBtn" text="View Detail >>>"></Button>
            </HBox>
        </VBox>
    </VBox>
    </VBox>
</Pane>
